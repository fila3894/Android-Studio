<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="도움말"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fqatextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="#E6E6E6"
            android:gravity="center|left"
            android:text="  우리집 E.S.C"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:visibility="visible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0"
            android:background="#000000" />

        <TextView
            android:id="@+id/fqatextView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:background="#FFFFFF"
            android:text="  우리집 E.S.C 모바일 앱에 대하여"
            android:textColor="#000000"
            android:gravity="center|left"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0"
            android:background="#000000" />

        <Button
            android:id="@+id/fqabutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:gravity="center|left"
            android:text="  우리집 E.S.C 모바일 앱이란?"
            android:textColor="#8F8686"
            android:textSize="15sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0"
            android:background="#000000" />

        <TextView
            android:id="@+id/fqatextView3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:background="#FFFFFF"
            android:text="  우리집 E.S.C 기본 사용법"
            android:textColor="#000000"
            android:gravity="center|left"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0"
            android:background="#000000" />

        <Button
            android:id="@+id/fqabutton2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:gravity="center|left"
            android:text="  사용자 지정은 어떻게 하나요?"
            android:textColor="#8F8686"
            android:textSize="15sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0"
            android:background="#000000" />

        <Button
            android:id="@+id/fqabutton3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:gravity="center|left"
            android:text="  제품은 어떻게 켜고 끌 수 있나요?"
            android:textColor="#8F8686"
            android:textSize="15sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="0"
            android:background="#000000" />


        <Button
            android:id="@+id/fqabutton4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:gravity="center|left"
            android:text="  사용량 확인은 어떻게 할 수 있나요?"
            android:textColor="#8F8686"
            android:textSize="15sp" />


    </LinearLayout>


</LinearLayout>