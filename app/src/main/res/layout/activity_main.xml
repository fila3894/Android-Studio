<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/introsky"
    android:orientation="vertical">

    
    <ImageView
        android:id="@+id/ele"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:rotation="0"
        app:srcCompat="@drawable/ele" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/elebulb"
            android:layout_width="167dp"
            android:layout_height="154dp"
            android:rotation="0"
            app:srcCompat="@drawable/elebulb" />

        <ImageView
            android:id="@+id/eletv"
            android:layout_width="160sp"
            android:layout_height="80sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60sp"
            android:rotation="10"
            android:layout_weight="1"
            app:srcCompat="@drawable/eletv" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        app:srcCompat="@drawable/house" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="우리집 전기사용량 확인!"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_weight="0"
        android:text="확인" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="-530sp"
        android:layout_marginRight="120sp"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="-100sp"
        android:layout_marginLeft="120sp"
        android:rotation="20"
        app:srcCompat="@drawable/cloud" />

</LinearLayout>
